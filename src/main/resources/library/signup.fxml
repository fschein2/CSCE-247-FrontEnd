<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignupController">
   <children>
      <Rectangle fill="DODGERBLUE" height="50.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="250.0">
         <VBox.margin>
            <Insets bottom="-10.0" left="-20.0" right="-20.0" top="-20.0" />
         </VBox.margin>
      </Rectangle>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="NextThought" translateY="-60.0">
         <font>
            <Font size="36.0" />
         </font>
         <VBox.margin>
            <Insets bottom="-60.0" />
         </VBox.margin>
      </Text>
      <Label text="Sign Up">
         <font>
            <Font size="24.0" />
         </font></Label>
      <TextField fx:id="fNameTextField" promptText="First Name">
         <VBox.margin>
            <Insets bottom="-10.0" />
         </VBox.margin></TextField>
      <TextField fx:id="lNameTextField" promptText="Last Name">
         <VBox.margin>
            <Insets bottom="-10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="emailTextField" promptText="Email">
         <VBox.margin>
            <Insets bottom="-10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="uNameTextField" promptText="Username">
         <VBox.margin>
            <Insets bottom="-10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="passTextField" promptText="Password" />
      <Button fx:id="signupbutton" onAction="#signUp" mnemonicParsing="false" text="Sign Up" />
      <Label text="Already have an account?">
         <VBox.margin>
            <Insets bottom="-15.0" />
         </VBox.margin>
      </Label>
      <Button fx:id="loginButton" onAction="#switchToLoginPage" prefWidth="58.4" text="Login" />
      <Rectangle fill="#c4c8cc" height="50.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="250.0">
         <VBox.margin>
            <Insets bottom="-20.0" left="-20.0" right="-20.0" top="-10.0" />
         </VBox.margin>
      </Rectangle>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
